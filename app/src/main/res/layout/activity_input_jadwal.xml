<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InputJadwal">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@color/abuabu"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Input Jadwal"
        app:titleMarginStart="20dp">
    </androidx.appcompat.widget.Toolbar>





    <EditText
        android:id="@+id/NamaPelajaran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/inputloginnnn"
        android:autofillHints=""
        android:fontFamily="monospace"
        android:hint="07:00-07:30"
        android:textColor="#000000" />



    <EditText
        android:id="@+id/jam2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/inputloginnnn"
        android:autofillHints=""
        android:hint="07:30-08:40"
        android:fontFamily="monospace"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/jam3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/inputloginnnn"
        android:autofillHints=""
        android:fontFamily="monospace"
        android:hint="08:40-09:50"
        android:textColor="#000000" />



    <EditText
        android:id="@+id/jam4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/inputloginnnn"
        android:autofillHints=""
        android:hint="09:50-10:20"
        android:fontFamily="monospace"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/jam5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/inputloginnnn"
        android:autofillHints=""
        android:hint="10:20-11:30"
        android:fontFamily="monospace"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/jam6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/inputloginnnn"
        android:autofillHints=""
        android:hint="11:30-12:30"
        android:fontFamily="monospace"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/jam7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/inputloginnnn"
        android:autofillHints=""
        android:hint="12:30:13-30"
        android:fontFamily="monospace"
        android:textColor="#000000" />


    <Button
        android:layout_marginLeft="120dp"
        android:layout_marginTop="50dp"
        android:layout_width="146dp"
        android:layout_height="51dp"
        android:background="@drawable/registrasi"
        android:id="@+id/save"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:text="SIMPAN"/>

</LinearLayout>